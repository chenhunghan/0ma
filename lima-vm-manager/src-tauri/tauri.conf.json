{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lima-vm-manager",
  "version": "0.1.0",
  "identifier": "com.chh.lima-vm-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lima VM Manager",
        "label": "main",
        "width": 400,
        "height": 600,
        "minWidth": 350,
        "minHeight": 400,
        "maxWidth": 500,
        "maxHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": true,
        "theme": "System"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
