{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["unicorn", "typescript", "oxc", "react", "react-perf", "import", "jsx-a11y", "vitest"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "error"
  },
  "env": {
    "builtin": true
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "src-tauri"
  ]
}