{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "0ma",
  "version": "0.1.0",
  "identifier": "chh.zeroma",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1600,
        "height": 1200,
        "minWidth": 300,
        "minHeight": 300,
        "theme": "Dark",
        "backgroundColor": "#1a1a1a",
        "titleBarStyle": "Transparent",
        "transparent": true,
        "windowEffects": {
          "effects": ["underWindowBackground"],
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright Â© 2025 Hung-Han Chen <chenhungh@gmail.com>. Licensed under MIT or Apache-2.0.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
